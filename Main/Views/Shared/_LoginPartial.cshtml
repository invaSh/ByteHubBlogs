@using Main.Models.Domain;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link btn text-light customLink mx-3" href="@Url.Action("UserProfile", "Account")"  title="Manage">
                Hello @User.Identity?.Name!
                <i class="bi bi-person-circle"></i>
            </a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Login", "Account", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-light text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-light" asp-area="" asp-action="Register" asp-controller="Account">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-action="Login" asp-controller="Account">Login</a>
    </li>
}
</ul>
