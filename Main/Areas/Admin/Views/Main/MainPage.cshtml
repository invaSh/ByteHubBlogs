                            <!-- Include the script to generate the chart -->
                            <script>
                                // Sample data for the last month (number of logins per day)
                                var loginData = [10, 15, 8, 12, 20, 14, 18, 22, 16, 10, 24, 19, 13, 17, 25, 21, 15, 9, 14, 23, 18, 12, 16, 20, 22, 14, 18, 23, 19, 15];

                                // Get today's date
                                var today = new Date();

                                // Generate labels for the last 30 days
                                var labels = Array.from({ length: 30 }, (_, i) => {
                                    var date = new Date(today);
                                    date.setDate(today.getDate() - i);
                                    return date.toLocaleDateString();
                                }).reverse();

                                // User Login Chart
                                var ctx = document.getElementById('userLoginChart').getContext('2d');
                                var userLoginChart = new Chart(ctx, {
                                    type: 'line',
                                    data: {
                                        labels: labels,
                                        datasets: [{
                                            label: 'Users Logged In',
                                            data: loginData,
                                            borderColor: 'rgba(75, 192, 192, 1)',
                                            borderWidth: 2,
                                            fill: false,
                                        }]
                                    },
                                    options: {
                                        responsive: true,
                                        maintainAspectRatio: false,
                                        scales: {
                                            x: [{
                                                grid: {
                                                    display: false
                                                }
                                            }],
                                            y: [{
                                                ticks: {
                                                    beginAtZero: true,
                                                    stepSize: 5
                                                }
                                            }]
                                        }
                                    }
                                });
                            </script>
