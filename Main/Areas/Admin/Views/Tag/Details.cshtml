@model Main.Models.Domain.Tag

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1 class="text-center">Tag Details</h1>
    </div>
</div>

<div class="container py-5">
    <div class="mb-3">
        <label class="form-label">Id:</label>
        <span class="form-control">@Model.Id</span>
    </div>
    <div class="mb-3">
        <label class="form-label">Name:</label>
        <span class="form-control">@Model.Name</span>
    </div>
    <div class="mb-3">
        <label class="form-label">Display Name:</label>
        <span class="form-control">@Model.DisplayName</span>
    </div>

    <div class="d-flex mt-3">
        <form method="post" asp-action="Delete" asp-controller="Tag" asp-area="Admin" class="me-2">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>

        <a href="@Url.Action("List")" class="btn btn-secondary">Back to List</a>

    </div>
</div>
