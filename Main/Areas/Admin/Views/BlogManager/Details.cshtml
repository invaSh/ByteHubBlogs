@model Main.Models.Domain.BlogPost

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container ">
        <h1 class="text-center">Details</h1>
    </div>
</div>

<div>
    <h4>BlogPost</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Heading):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Heading)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Content):
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Content)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShortDescription):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FeaturedImageURL):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FeaturedImageURL)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UrlHandle):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UrlHandle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PublishedDate):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublishedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Author):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>

        <dt class="col-sm-2">
            Tags:
        </dt>
        <dd class="col-sm-10">
            @if (Model.BlogPostTags != null && Model.BlogPostTags.Any())
            {
                <div class="d-flex">
                    @foreach (var tag in Model.BlogPostTags)
                    {
                        <span class="badge bg-secondary mx-1">@tag.Tag?.Name</span>
                    }
                </div>
            }
            else
            {
                <p>No tags available.</p>
            }
        </dd>
        
    </dl>
</div>
<div class="d-flex">
    <div >
        <a href="@Url.Action("Edit", "BlogManager", new { area = "Admin", id = Model?.Id })" class="btn btn-dark hover-text-light ">
            Edit
        </a>
    </div> 
    <div class="mx-2">
        <form method="post" action="@Url.Action("Delete", "BlogManager", new { area = "Admin", id = Model?.Id })">
            <button type="submit" class="btn btn-danger hover-text-light">Delete</button>
        </form>
    </div>
    
</div>
<div class="my-5">
    <a href="@Url.Action("List", "BlogManager", new { area = "Admin" })" class="btn btn-secondary">
        Back to List
    </a>
</div>

<div class="mt-5">
    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
    {
        <div class="alert alert-success">
            @ViewBag.SuccessMessage
        </div>
    }
</div>
