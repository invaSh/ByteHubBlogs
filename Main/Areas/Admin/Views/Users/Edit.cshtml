@model Main.Models.ViewModels.UserDetailsViewModel
@{
    ViewData["Title"] = "Update User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container ">
        <h1 class="text-center">Update User</h1>
    </div>
</div>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger alert-dismissible fade show mt-5" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <ul>
            @foreach (var key in ViewData.ModelState.Keys)
            {
                foreach (var error in ViewData.ModelState[key].Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label fw-bold" asp-for="Username">Username: </label>
            <input type="text" value="@Model.Username" name="Username" class="form-control" asp-for="Username" />
            <span class="text-danger" asp-validation-for="Username"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold" asp-for="Email">Email: </label>
            <input type="text" value="@Model.EmailAddress" name="EmailAddress" class="form-control" asp-for="Email" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Roles: </label>
            <div class="form-check">
                <input class="form-check-input" type="radio" id="adminRole" name="Role" value="Admin" checked='@(Model.Role == "Admin")'>
                <label class="form-check-label" for="adminRole">
                    Admin
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" id="headAdminRole" name="Role" value="Head Admin" checked='@(Model.Role == "Head Admin")'>
                <label class="form-check-label" for="headAdminRole">
                    Head Admin
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" id="userRole" name="Role" value="User" checked='@(Model.Role == "User")'>
                <label class="form-check-label" for="userRole">
                    User
                </label>
            </div>
        </div>



        <div class="mb-3 d-flex justify-content-center">
            <button type="submit" class="btn btn-dark rounded-3 px-5 py-2 fs-5">Update</button>
        </div>
    </form>
</div>
